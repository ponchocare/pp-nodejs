{
  "name": "@ponchopay/pp-nodejs",
  "version": "1.1.0",
  "description": "Tools to integrate PonchoPay on NodeJS",
  "type": "module",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ponchocare/pp-nodejs.git"
  },
  "keywords": [
    "ponchopay",
    "nodejs",
    "fetch",
    "tools"
  ],
  "author": "info@ponchopay.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ponchocare/pp-nodejs/issues"
  },
  "homepage": "https://github.com/ponchocare/pp-nodejs#readme",
  "dependencies": {
    "jose": "^6.0.10",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "isomorphic-fetch": "^3.0.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.4"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-undef": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  }
}
